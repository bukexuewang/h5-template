{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"paths": {
			"@/*": [
				"src/*"
			],
			"#/*": [
				"declare/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"skipLibCheck": true,
		"types": [
			"vite/client"
		]
	},
	"include": [
		"vite.config.*",
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"declare/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"tests/server/**/*.ts",
		"dist",
		"**/*.js"
	]
}